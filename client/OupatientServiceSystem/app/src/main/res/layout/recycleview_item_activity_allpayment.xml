<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <!-- display 预约挂号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_orderdetails_textview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="订单详情"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="详情"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_small2" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>

        <!--Segmenting line-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray" />

        <!-- display 订单号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_ordertype_textview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="单号:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_small3" />

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_itemcostid_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="单号"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_small3" />

        </LinearLayout>

        <!-- display 支付状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="支付状态:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_small3" />

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_paystate_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="支付状态"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_small3" />

        </LinearLayout>

        <!-- display cost and cancel or pay time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="金额:"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_small3" />

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_cost_textview"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="XX"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_small3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="元"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textsize_small3" />

            <TextView
                android:id="@+id/recycleview_item_activity_outpatientpayment_cancelorpaytime_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="年:月:日 时:分:秒"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_small3" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>