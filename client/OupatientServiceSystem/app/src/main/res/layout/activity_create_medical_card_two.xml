<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context=".activity.EnrollTwoActivity">

    <!-- toolbar -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_createmedicalcardotwo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="办理诊疗卡"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_large" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--the content layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- text instruction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <!-- input phonenumber -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 绑定手机号"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_middle" />

            <!-- input verificationcode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 输入验证码"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_middle" />

            <!-- confirm enroll -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3 确认办理"
                android:textColor="@color/colorGrayDeep"
                android:textSize="@dimen/textsize_middle" />

        </LinearLayout>

        <!-- line instruction -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- line -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary" />

            <!-- point -->
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_point_green" />

            <!-- line -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="2"
                android:background="@color/colorPrimary" />

            <!-- point -->
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_point_green" />

            <!-- line -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="2"
                android:background="@color/colorGray" />

            <!-- point -->
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_point_gray" />

            <!-- line -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/colorGray" />

        </LinearLayout>

        <!--display picture verification code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:src="@drawable/ic_picture_verificationcode" />

            <EditText
                android:id="@+id/activity_createmedicalcardotwo_pictureverificationcode_edittext"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:hint="请输入右侧验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textSize="@dimen/textsize_large" />

            <ImageView
                android:id="@+id/activity_createmedicalcardotwo_pictureverificationcode_imageview"
                android:layout_width="104dp"
                android:layout_height="40dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/verificationcode_cache"
                android:scaleType="fitXY" />

        </LinearLayout>

        <!--display message verification code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:src="@drawable/ic_message_verificationcode" />

            <EditText
                android:id="@+id/activity_createmedicalcardotwo_messageverificationcode_edittext"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textSize="@dimen/textsize_large" />

            <!-- get verification code LinearLayout-->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="36dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp">

                    <!-- get verification code button -->
                    <Button
                        android:id="@+id/activity_createmedicalcardotwo_getmessageverificationcode_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textsize_middle" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <!--display next step button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                app:cardCornerRadius="24dp">

                <Button
                    android:id="@+id/activity_createmedicalcardotwo_nextstep_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/colorPrimary"
                    android:text="下一步"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_large" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!--network cache cardview-->
    <android.support.v7.widget.CardView
        android:id="@+id/activity_createmedicalcardotwo_networkcache_cardview"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:indeterminateTint="@color/colorGrayDeep"
                android:indeterminateTintMode="src_atop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="正在验证,请稍后"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_normal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- error cardview ，alter all kinds of error message-->
    <android.support.v7.widget.CardView
        android:id="@+id/activity_createmedicalcardotwo_error_cardview"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_notice" />

            <TextView
                android:id="@+id/activity_createmedicalcardotwo_error_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="该手机号已被注册"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_normal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!-- send success cardview-->
    <android.support.v7.widget.CardView
        android:id="@+id/activity_createmedicalcardotwo_paysuccess_cardview"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="验证码发送成功"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_normal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>