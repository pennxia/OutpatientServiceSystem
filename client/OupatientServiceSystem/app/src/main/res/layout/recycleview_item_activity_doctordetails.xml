<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycleview_item_activity_doctordetails_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <!--the left LinearLayout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--the top LinearLayout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/recycleview_item_activity_doctordetails_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年-月-日"
                    android:textColor="@color/colorGrayDeep" />

                <TextView
                    android:id="@+id/recycleview_item_activity_doctordetails_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="星期几"
                    android:textColor="@color/colorGrayDeep" />

                <TextView
                    android:id="@+id/recycleview_item_activity_doctordetails_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="时段"
                    android:textColor="@color/colorGrayDeep" />

                <TextView
                    android:id="@+id/recycleview_item_activity_doctordetails_hospitaldistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="院区"
                    android:textColor="@color/colorGrayDeep" />

            </LinearLayout>

            <!--the bottom LinearLayout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="亚专业："
                    android:textColor="@color/colorGrayDeep" />

                <TextView
                    android:id="@+id/recycleview_item_activity_doctordetails_submajor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生亚专业"
                    android:textColor="@color/colorGrayDeep" />

            </LinearLayout>


        </LinearLayout>

        <!--the right LinearLayout-->
        <FrameLayout
            android:id="@+id/recycleview_item_activity_doctordetails_framelayout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_circle_red">

            <TextView
                android:id="@+id/recycleview_item_activity_doctordetails_canregister_textview"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="号满"
                android:textColor="@color/colorRed2" />

        </FrameLayout>

    </LinearLayout>

    <!--Segmenting line-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:background="@color/colorGray" />

</LinearLayout>